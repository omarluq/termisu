{
  "extends": ["../biome.json"],
  "root": false,
  "files": {
    "includes": ["tests/**/*.ts", "*.ts"]
  },
  "formatter": {
    "lineWidth": 80
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  }
}
