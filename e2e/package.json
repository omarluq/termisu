{
  "name": "termisu-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Termisu TUI library",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm exec --yes --package=node@24 -- node ./node_modules/@microsoft/tui-test/index.js",
    "test:trace": "npm exec --yes --package=node@24 -- node ./node_modules/@microsoft/tui-test/index.js --trace",
    "test:update": "npm exec --yes --package=node@24 -- node ./node_modules/@microsoft/tui-test/index.js --updateSnapshot",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@homebridge/node-pty-prebuilt-multiarch": "^0.13.1",
    "@microsoft/tui-test": "github:jacob314/tui-test#eda5ffa"
  },
  "trustedDependencies": [
    "@homebridge/node-pty-prebuilt-multiarch"
  ],
  "engines": {
    "node": ">=25.7.0"
  }
}
