{
  "name": "termisu-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Termisu TUI library",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "tui-test",
    "test:trace": "tui-test --trace",
    "test:update": "tui-test --updateSnapshot",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@microsoft/tui-test": "github:jacob314/tui-test#node_24_support",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.30.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@homebridge/node-pty-prebuilt-multiarch",
      "@biomejs/biome",
      "@swc/core"
    ]
  }
}
