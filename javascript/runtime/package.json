{
  "name": "@termisu/runtime",
  "version": "0.0.0",
  "description": "Runtime orchestration for Termisu bindings",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "bun run clean && bun build src/index.ts --outdir dist --target bun --format esm && bun run build:types",
    "build:types": "bunx tsc -p tsconfig.json --emitDeclarationOnly",
    "clean": "rimraf dist",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@termisu/core": "workspace:*",
    "@termisu/platform": "workspace:*"
  },
  "license": "MIT"
}
